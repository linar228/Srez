<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Srez.Pages.AuthPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BorderColor="Black" Margin="30,10" BackgroundColor="Bisque">
                <Entry x:Name="LoginEntry" Placeholder="Login" Margin="-15,-15"/>
            </Frame>
            <Frame BorderColor="Black" Margin="30,10" BackgroundColor="Bisque">
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="-15,-15"/>
            </Frame>
            <StackLayout Orientation="Vertical" Spacing="40">
                <Button Clicked="AuthButton_Clicked" Text="Авторизоваться"  Margin="30, 30, 30, 0" BackgroundColor="Bisque" BorderColor="Black" CornerRadius="50" TextColor="Black"></Button>
                <Button Clicked="CreateButton_Clicked" Text="Создать аккаунт"  Margin="30, -15, 30, 0" HeightRequest="50" BackgroundColor="Bisque" CornerRadius="50" BorderColor="Black" TextColor="Black"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>